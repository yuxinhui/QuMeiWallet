<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/left_return"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="30%">

            <ImageView
                android:id="@+id/image_return"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/icon_return"
                app:layout_heightPercent="46%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginTopPercent="26%"
                app:layout_widthPercent="28%"/>


        </android.support.percent.PercentRelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="雨点信用"
            android:textColor="#ffffff"
            android:textSize="22sp"/>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_below="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/fen_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/xyk_dk"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="@string/tip_xyk"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:visibility="gone"
                        android:background="@color/fen_gray"
                        ></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/xyk_layout_1"
                        android:layout_height="100dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:id="@+id/pf_xyk_layout"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                style="@style/home_gn_img"
                                android:src="@drawable/pufa_bank"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/xyk_pufa"
                                android:layout_gravity="center"
                                style="@style/home_gn_tx"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:id="@+id/jt_xyk_layout"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                style="@style/home_gn_img"
                                android:src="@drawable/jiaotong_bank"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/xyk_jiaotong"
                                android:layout_gravity="center"
                                style="@style/home_gn_tx"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:id="@+id/pa_xyk_layout"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                style="@style/home_gn_img"
                                android:src="@drawable/pingan_bank"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/xyk_pingan"
                                android:layout_gravity="center"
                                style="@style/home_gn_tx"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/fen_gray"
                        ></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/xmk_layout_2"
                        android:layout_height="100dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:id="@+id/ms_xyk_layout"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                style="@style/home_gn_img"
                                android:src="@drawable/mingsheng_bank"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/xyk_mingsheng"
                                android:layout_gravity="center"
                                style="@style/home_gn_tx"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:id="@+id/xy_xyk_layout"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                style="@style/home_gn_img"
                                android:src="@drawable/xingye_bank"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/xyk_xingye"
                                android:layout_gravity="center"
                                style="@style/home_gn_tx"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:id="@+id/gz_xyk_layout"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                style="@style/home_gn_img"
                                android:src="@drawable/guangzhou_bank"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/xyk_guangzhou"
                                android:layout_gravity="center"
                                style="@style/home_gn_tx"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/fen_gray"
                        ></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/xmk_layout_3"
                        android:layout_height="100dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:id="@+id/zs_xyk_layout"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                style="@style/home_gn_img"
                                android:src="@drawable/zhangshang_blank"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/xyk_zhaoshang"
                                android:layout_gravity="center"
                                style="@style/home_gn_tx"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:id="@+id/gd_xyk_layout"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                style="@style/home_gn_img"
                                android:src="@drawable/guangda_bank"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/xyk_guangda"
                                android:layout_gravity="center"
                                style="@style/home_gn_tx"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:id="@+id/sh_xyk_layout"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                style="@style/home_gn_img"
                                android:src="@drawable/shanghai_bank"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/xyk_shanghai"
                                android:layout_gravity="center"
                                style="@style/home_gn_tx"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.percent.PercentRelativeLayout>


</android.support.percent.PercentRelativeLayout>
