<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/left_return"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="30%">

            <ImageView
                android:id="@+id/image_return"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/icon_return"
                app:layout_heightPercent="46%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginTopPercent="26%"
                app:layout_widthPercent="28%"/>


        </android.support.percent.PercentRelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_bmikece"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="@string/title_txjl"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"/>
    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_below="@+id/layout_top"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        app:layout_heightPercent="100%"
        >

        <android.support.percent.PercentRelativeLayout
            android:layout_below="@+id/name"
            android:layout_width="0dp"
            app:layout_widthPercent="70%"
            android:id="@+id/layout_circle"
            app:layout_marginTopPercent="1.5%"
            app:layout_heightPercent="48%"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yuan"
            >
       <android.support.percent.PercentLinearLayout
           app:layout_widthPercent="80%"
           app:layout_heightPercent="30%"
           android:orientation="vertical"
           android:layout_centerInParent="true"
           >
           <com.gdyd.qmwallet.myview.RiseNumberTextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:id="@+id/ktx_money"
               android:text="0.00"
               android:gravity="center"
               android:textSize="28sp"
               android:textColor="@color/black"
               android:layout_weight="1"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:text="当前可提现金额(元)"
               android:gravity="center"
               android:textSize="15sp"
               android:layout_weight="1"/>

       </android.support.percent.PercentLinearLayout>
        </android.support.percent.PercentRelativeLayout>
         <TextView
             app:layout_heightPercent="9%"
             app:layout_marginTopPercent="4%"
             android:id="@+id/submit"
             android:text="我要提现"
             android:gravity="center"
             android:textSize="20sp"
             android:textColor="@color/colorWhite"
             android:background="@drawable/rectangle_blue"
             android:layout_below="@+id/layout_circle"
             android:layout_centerHorizontal="true"
             app:layout_widthPercent="45%"/>
        <android.support.percent.PercentLinearLayout
            android:layout_below="@+id/submit"
            app:layout_heightPercent="18%"
            app:layout_marginTopPercent="4%"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            >
        <android.support.percent.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="0.00"
                android:id="@+id/ytx_money"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/colorBlack"
                android:layout_height="0dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="昨日收益"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/colorGray"
                android:layout_height="0dp"
                />
        </android.support.percent.PercentLinearLayout>
            <android.support.percent.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="0.00"
                    android:id="@+id/curtx_money"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/colorBlack"
                    android:layout_height="0dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="今日收益"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/colorGray"
                    android:layout_height="0dp"
                    android:id="@+id/textView6" />
            </android.support.percent.PercentLinearLayout>
        </android.support.percent.PercentLinearLayout>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentLinearLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="15%"
        android:background="@drawable/up_blue"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <com.gdyd.qmwallet.myview.RiseNumberTextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/sum_money" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="共累计分润（元）"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
    </android.support.percent.PercentLinearLayout>
</android.support.percent.PercentRelativeLayout>
