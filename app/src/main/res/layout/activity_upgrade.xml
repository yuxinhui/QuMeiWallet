<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/left_return"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="30%">

            <ImageView
                android:id="@+id/image_return"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/icon_return"
                app:layout_heightPercent="46%"
                app:layout_marginLeftPercent="5%"
                android:onClick="image_return"
                app:layout_marginTopPercent="26%"
                app:layout_widthPercent="28%"/>


        </android.support.percent.PercentRelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_upgrage"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="@string/title_profit_model"
            android:onClick="ProfitModel"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"/>
    </android.support.percent.PercentRelativeLayout>
     <android.support.percent.PercentRelativeLayout
         android:layout_below="@+id/layout_top"
         app:layout_heightPercent="90%"
         app:layout_marginTopPercent="2%"
         app:layout_widthPercent="100%"
         >
         <android.support.v4.view.ViewPager
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/viewpager">
         </android.support.v4.view.ViewPager>
         <LinearLayout
             android:id="@+id/dot_layout"
             android:layout_width="match_parent"
             android:layout_height="24dp"
             android:layout_alignBottom="@id/viewpager"
             app:layout_marginBottomPercent="15%"
             android:gravity="center"
             android:orientation="horizontal">
             <TextView
                 android:id="@+id/tv"
                 android:visibility="gone"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/colorBlack"
                 android:layout_above="@id/dot_layout"
                 android:layout_centerHorizontal="true"
                 android:layout_marginBottom="-12dp"
                 android:text="title"/>
         </LinearLayout>
     </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
