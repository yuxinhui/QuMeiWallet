<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/rectangle" >

    <RelativeLayout
        android:id="@+id/layout_queryorder_search_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_marginLeft="5dp"
  android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/tip_img"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/tip_queryorder_search"
            android:src="@drawable/logo" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_alignTop="@id/tip_img"
        android:layout_toRightOf="@+id/tip_img"
        android:gravity="center_vertical"
         android:layout_marginLeft="5dp"
         android:id="@+id/title"
        android:text="商户查询"
        android:textColor="@color/black"
        android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tip_img"
            android:layout_below="@+id/title"
          android:layout_marginTop="3dp"
            android:id="@+id/content"
            android:gravity="center_vertical"
           android:layout_marginLeft="5dp"
            android:text="商户查询"
            android:textColor="@color/colorGray"
            android:textSize="16sp" />
        <TextView
            android:layout_below="@+id/tip_img"
            android:id="@+id/time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="商户名称"
            android:layout_marginLeft="10dp"
            android:layout_alignLeft="@+id/tip_img"
           android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>


</RelativeLayout>