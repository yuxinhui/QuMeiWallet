<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"
        ></View>
    <ImageView
        app:layout_widthPercent="30%"
       android:layout_height="match_parent"
        android:id="@+id/face"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_jp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/face"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"

        app:layout_marginRightPercent="5%"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/icon_item_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="123"
                android:id="@+id/name"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/icon_item_phone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:text="123"
                android:id="@+id/phone"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/icon_item_time"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:text="123"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:id="@+id/time"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/icon_item_zl"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:text="123"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:id="@+id/ziliao"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/icon_item_zl"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:text="123"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:id="@+id/ziliao1"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/icon_item_zl"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:text="123"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:id="@+id/ziliao2"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>