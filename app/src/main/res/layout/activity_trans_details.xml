<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_trans_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fen_gray"
    >
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/left_return"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="30%">

            <ImageView
                android:id="@+id/image_return"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/icon_return"
                app:layout_heightPercent="46%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginTopPercent="26%"
                app:layout_widthPercent="28%"/>


        </android.support.percent.PercentRelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="#ffffff"
            android:textSize="22sp"/>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="15%"
        android:id="@+id/re_layout"
        android:background="@color/colorWhite"
        android:layout_below="@+id/layout_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/icon"
                android:padding="8dp"
                android:src="@drawable/icon_wx_color"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/icon"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:textColor="@color/green"
                android:text="支付成功"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="22sp"
                android:id="@+id/zfzt"/>
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentLinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/re_layout"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        >
        <android.support.percent.PercentRelativeLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="13%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="交易金额"/>
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:id="@+id/jy_money"
                android:textSize="18sp"
                android:textColor="@color/red"
                android:text=""/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/line_gray"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                ></View>
        </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="13%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:textSize="16sp"

                android:gravity="center"
                android:textColor="@color/black"
                android:text="商户名称"/>
            <TextView
                android:id="@+id/jy_name"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text=""/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/line_gray"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                ></View>
        </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="13%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:textSize="16sp"

                android:gravity="center"
                android:textColor="@color/black"
                android:text="商户手机"/>
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:id="@+id/jy_phone"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text=""/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/line_gray"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                ></View>
        </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="13%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:textSize="16sp"

                android:gravity="center"
                android:textColor="@color/black"
                android:text="收银员"/>
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:id="@+id/jy_skr"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="100.00"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/line_gray"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                ></View>
        </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="13%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:textSize="16sp"

                android:gravity="center"
                android:textColor="@color/black"
                android:text="支付方式"/>
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:id="@+id/jy_fs"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text=""/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/line_gray"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                ></View>
        </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="13%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="交易时间"/>
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:id="@+id/jy_time"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text=""/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/line_gray"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                ></View>
        </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="13%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:textSize="16sp"
                android:id="@+id/ddbh"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="订单编号"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|right"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:id="@+id/jy_No"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/ddbh"
                android:textColor="@color/black"
                android:text=""/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/line_gray"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                ></View>
        </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="13%">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:textSize="16sp"

                android:gravity="center"
                android:textColor="@color/black"
                android:text="交易状态"/>
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:id="@+id/jy_zt"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text=""/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/line_gray"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                ></View>
        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentLinearLayout>


</android.support.percent.PercentRelativeLayout>
