<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/payeco_waitHttpResDialog"
android:layout_width="260dip"
android:layout_height="150dip"
android:background="@drawable/payeco_radiu_dialog"
android:gravity="center"
android:orientation="vertical">
<ImageView
android:src="@drawable/payeco_unionpay_loading"
android:id="@+id/payeco_loading_img"
android:layout_width="wrap_content"
android:layout_height="wrap_content"/>
<com.payeco.android.plugin.view.ShimmerTextView
android:id="@+id/payeco_loading_text"
android:layout_marginTop="10dip"
android:layout_marginLeft="15dip"
android:layout_marginRight="15dip"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:gravity="center_horizontal"
android:lineSpacingExtra="3dip"
android:textSize="15sp"/>
</LinearLayout>