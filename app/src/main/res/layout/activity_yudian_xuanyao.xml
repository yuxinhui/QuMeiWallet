<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/left_return"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="30%">

            <ImageView
                android:id="@+id/image_return"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:visibility="invisible"
                android:src="@drawable/icon_return"
                app:layout_heightPercent="46%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginTopPercent="26%"
                app:layout_widthPercent="28%"/>


        </android.support.percent.PercentRelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="炫耀一下"
            android:textColor="#ffffff"
            android:textSize="22sp"/>
        />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_credit_circle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/layout_top"
        android:background="@color/blue"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="100%">

        <com.gdyd.qmwallet.home.view.RainCreditCircle
            android:id="@+id/view_crdit_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="76dp"
            android:layout_marginRight="76dp"
            />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_qrcode_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_credit_circle"
        android:background="@color/colorWhite"
    >
        <LinearLayout
            android:orientation="vertical"
            android:baselineAligned="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="扫描二维码注册，一起享有雨点信用"
                android:textSize="16sp"
                android:textColor="#333333"
                android:gravity="center_horizontal"
                />
            <ImageView
                android:layout_width="235dp"
                android:layout_height="235dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/sharp_yudian_qrcode_register"
                android:shadowColor ="#ca2b75"
                android:shadowDx ="1"
                android:shadowDy ="1"
                android:shadowRadius="1"
                android:layout_gravity="center_horizontal"
                android:paddingTop="40dp"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:paddingBottom="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="俏美钱包"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                />

        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
