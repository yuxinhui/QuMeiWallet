<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/left_return"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="30%">

            <ImageView
                android:id="@+id/image_return"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/icon_return"
                app:layout_heightPercent="46%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginTopPercent="26%"
                app:layout_widthPercent="28%"/>


        </android.support.percent.PercentRelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择通道"
            android:textColor="#ffffff"
            android:textSize="22sp"/>
    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="20%"
        android:id="@+id/layout_body"

        android:layout_below="@+id/layout_top"
        >
        <android.support.percent.PercentRelativeLayout
            app:layout_widthPercent="100%"
            android:id="@+id/trans_layout"
            app:layout_heightPercent="38%"
            app:layout_marginTopPercent="17%"
            >
            <TextView
                android:gravity="center"
                android:layout_marginLeft="20dp"
               android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="交易类型："
                android:textColor="@color/black"
                android:id="@+id/trans_money"
                android:textSize="20sp"
                />
            <TextView
                android:gravity="left|center_vertical"
                android:textColor="@color/black"
                android:id="@+id/type"
                android:layout_toRightOf="@id/trans_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="微信支付"
                android:textSize="20sp"
                />

        </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
            app:layout_widthPercent="100%"
            android:layout_below="@+id/trans_layout"
            app:layout_heightPercent="38%"
            android:layout_centerVertical="true"
            app:layout_marginTopPercent="1%"

            >
            <TextView
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="交易金额："
                android:textColor="@color/black"
                android:id="@+id/Merchant_sum"
                android:textSize="20sp"
                />
            <TextView
                android:gravity="left|center_vertical"
                android:textColor="@color/red"
                android:layout_toRightOf="@id/Merchant_sum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/zroe"
                android:id="@+id/money"
                android:textSize="20sp"
                />

        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/fen_gray"
        android:layout_below="@+id/layout_body"
        android:id="@+id/fen_line" />
    <android.support.percent.PercentRelativeLayout
        app:layout_widthPercent="100%"
        android:layout_below="@+id/fen_line"
        app:layout_heightPercent="6%"
        android:layout_centerVertical="true"
        android:id="@+id/tip_layout"
        android:background="@color/line_gray"
        >
        <ImageView
            android:gravity="center"
            android:layout_width="56dp"
           android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:id="@+id/tip"
            android:visibility="gone"

          android:src="@drawable/logo"
            />
        <TextView
            android:gravity="center_vertical|left"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="请选择支付通道"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            />

    </android.support.percent.PercentRelativeLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tip_layout"
        android:divider="@null"
        android:id="@+id/listView"
        >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>
    <Button
        android:id="@+id/submit"
        android:visibility="gone"
       android:layout_below="@+id/listView"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="7%"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_blue"
        android:textSize="20sp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"/>
    <android.support.percent.PercentRelativeLayout
        app:layout_heightPercent="13%"
        android:layout_centerInParent="true"
        app:layout_widthPercent="65%"
        android:id="@+id/tip_ddsq"
        android:visibility="gone"
        android:background="@drawable/rectangle_black"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="订单申请中..."
            android:textSize="20sp"
            android:id="@+id/tv_tip"
            app:layout_marginLeftPercent="8%"
            android:textColor="@color/colorWhite"
            />
        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:id="@+id/pBar"
            android:layout_toRightOf="@+id/tv_tip"
            app:layout_heightPercent="45%"
            app:layout_marginLeftPercent="1%"
            android:layout_centerVertical="true"
            app:layout_widthPercent="40%"
            />
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>